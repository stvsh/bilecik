<div class="container p-3 w-50 mx-auto">
<p id="notice"><%= flash[:notice] %></p>

<p>
  <strong>Artist:</strong>
  <%= @event.artist %>
</p>

<p>
  <strong>Description</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Price low:</strong>
  <%= @event.price_low %>
</p>

<p>
  <strong>Price high:</strong>
  <%= @event.price_high %>
</p>

<p>
  <strong>Event date:</strong>
  <%= @event.event_date %>
</p>

<br>

<%= render "tickets_list", tickets: current_user.tickets.where(event_id: @event.id) %>
<%= render "new_ticket", ticket: Ticket.new(:event_id => @event.id, :user_id => current_user.id, :email_address => current_user.email) %>

<%= link_to 'Back', events_path, :class => 'btn btn-secondary'%>
</div>
