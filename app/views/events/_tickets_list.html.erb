<p id="notice"><%= notice %></p>

<div class="container p-3">
    <h4>My tickets</h4>

    <% if tickets.length > 0 %>
        <table>
        <thead>
            <tr>
            <th>Name</th>
            <th>Seat id seq</th>
            <th>Address</th>
            <th>Price</th>
            <th>Email address</th>
            <th>Phone number</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% tickets.each do |ticket| %>
            <tr>
                <td><%= ticket.name %></td>
                <td><%= ticket.seat_id_seq %></td>
                <td><%= ticket.address %></td>
                <td><%= ticket.price %></td>
                <td><%= ticket.email_address %></td>
                <td><%= ticket.phone %></td>
                <td><%= link_to 'Show', ticket %></td>
                <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
                <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
    <% else %>
        <p>No tickets purchased</p>
    <% end %>
</div>