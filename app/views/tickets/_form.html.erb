<%= form_with(model: ticket) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label :seat_id_seq %>
    <%= form.text_field :seat_id_seq, required: true %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address, required: true %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, required: true, value: number_to_currency(form.object.price, delimiter: '.', unit: ''), step: :any %>
  </div>

  <div class="field">
    <%= form.label :email_address %>
    <%= form.text_field :email_address, required: true %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, required: true %>
  </div>

  <div class="field">
    <%= form.label :event %>
    <%= form.collection_select :event_id, @events, :id, :artist, include_blank: false %>
  </div>

  <div class="actions">
    <%= form.submit 'Buy', :class => "btn btn-primary" %>
  </div>
<% end %>
