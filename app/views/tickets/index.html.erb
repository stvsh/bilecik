<div class="container mx-auto w-50 p-3 text-center">
  <h1 class="m-3 display-4">My tickets</h1>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Seat id seq</th>
        <th>Address</th>
        <th>Price</th>
        <th>Phone number</th>
        <th>Event</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.name %></td>
          <td><%= ticket.seat_id_seq %></td>
          <td><%= ticket.address %></td>
          <td><%= ticket.price %></td>
          <td><%= ticket.phone %></td>
          <td><%= ticket.event.artist %>
          <td><%= link_to 'Show', ticket, :class => 'btn btn-sm btn-light' %></td>

          <% if ticket.user == current_user %>
            <td><%= link_to 'Edit', edit_ticket_path(ticket), :class => 'btn btn-sm btn-warning'  %></td>
            <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-danger' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to 'New Ticket', new_ticket_path, class: 'w-30 btn btn-primary' %>
  </div>
</div>
